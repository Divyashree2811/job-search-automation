# User Credentials
USER_EMAIL=your-email@example.com
USER_PASSWORD=your-password-here

# Authentication Storage Paths
XING_STORAGE_PATH=./storageState/xingAuth.json
LINKEDIN_STORAGE_PATH=./storageState/linkedinAuth.json

# Skip authentication setup (set to 'true' to skip login)
SKIP_AUTH=true

# Enable/disable specific platform auth
ENABLE_LINKEDIN_AUTH=true
ENABLE_XING_AUTH=false

# DeepL API Key (Free: https://www.deepl.com/pro-api)
# Optional - Ollama is used for translation by default
DEEPL_API_KEY=your-deepl-api-key-here

# Headless mode (set to 'true' for cron jobs, 'false' for debugging)
HEADLESS=false
